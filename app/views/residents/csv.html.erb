<h2>Select Column Headers</h2>
<p><%= @file.original_filename %></p>
<div class="form">
    <%= form_with url: "/residents/import", method: :post do |f| %>
        <div class="field">
            <%= f.label :first_name %>
            <%= f.select(:first_name_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :first_name_alt %>
        </div>
        <div class="field">
            <%= f.label :last_name %>
            <%= f.select(:last_name_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
