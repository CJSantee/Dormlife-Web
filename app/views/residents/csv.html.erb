                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :room_alt %>
        </div>

        <%= hidden_field_tag :filename, @file.original_filename %>

        <div class="actions">
            <%= submit_tag "Import CSV" %>
        </div>

    <% end %>
</div>

