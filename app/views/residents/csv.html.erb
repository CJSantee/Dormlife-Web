            <%= f.text_field :email_alt %>
        </div>
        <div class="field">
            <%= f.label :college %>
            <%= f.select(:college_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :college_alt %>
        </div>
        <div class="field">
            <%= f.label :residence_hall %>
            <%= f.select(:residence_hall_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
