            <% end %>
            <%= f.text_field :last_name_alt %>
        </div>
        <div class="field">
            <%= f.label :curfew %>
            <%= f.select(:curfew_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :curfew_alt %>
        </div>
        <div class="field">
            <%= f.label :phone_number %>
            <%= f.select(:phone_number_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :phone_number_alt %>
        </div>
        <div class="field">
            <%= f.label :student_id %>
            <%= f.select(:student_id_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
                <% end %>
            <% end %>
            <%= f.text_field :student_id_alt %>
        </div>
        <div class="field">
            <%= f.label :email %>
            <%= f.select(:email_header) do %>
                <% @headers.each do |header| %>
                    <%= content_tag(:option, header, value: header) %>
