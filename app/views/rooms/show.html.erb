<div class="heading">
    <%= link_to college_residence_hall_path(@college, @residence_hall) do %>
        <h2><%= @residence_hall.name%></h2>
    <% end %>
    <div class="options">
        <div>
            <%= link_to "Edit", edit_college_residence_hall_room_path(@college, @residence_hall, @room) %>
            <%= link_to "Back", :back %>
        </div>
    </div>
</div>
<h3>Room: <%= @room.room_number %></h3>
<% @residents.each do |resident| %>
    <div class="row">
        <h3><%= resident.first_name %> <%= resident.last_name %></h3>
        <p><%= resident.student_id %></p>
        <div class="options">
            <%= link_to "View", resident_path(resident)%>
            <%= link_to "Edit", edit_resident_path(resident)%>
            <%= link_to "Delete", [resident], method: :delete, data: { confirm: "Are you sure?" }, class: "destructive" %>
        </div>
    </div>
<% end %>